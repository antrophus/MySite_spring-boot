<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<resultMap id="resultMapBoardVo" type="com.javaex.vo.BoardVo" >
        <result column="no" property="no" />
        <result column="title" property="title" />
        <result column="content" property="content" />
        <result column="hit" property="hit" />
        <result column="reg_date" property="regDate" />
        <result column="user_no" property="userNo" />
        <result column="name" property="name" />  <!-- 추가된 부분 -->
    </resultMap>
	
	<!-- 게시판 리스트 -->
	<select id="selectList" resultMap="resultMapBoardVo">
		<![CDATA[
		select 	b.no
				,b.title
        		,b.content
        		,b.hit
        		,b.reg_date
        		,u.name
        		,b.user_no
		from board b
		join users u on b.user_no = u.no
		]]>
	</select>
	
	<!-- 게시글 읽기 -->
	<select id="selectOne" parameterType="com.javaex.vo.BoardVo" resultType="com.javaex.vo.BoardVo">
		<![CDATA[
		select 	b.no
				,b.title
        		,b.content
        		,b.hit
        		,b.reg_date
        		,u.name
        		,b.user_no as userNo
		from board b
		join users u on b.user_no = u.no
		where b.no = #{b.no}
		]]>
	</select>
	
	<!-- 게시글 작성 -->
	<insert id="insertBoard" parameterType="com.javaex.vo.BoardVo">
		<![CDATA[
		insert into board (title, content, user_no)
		value( 	 #{title}
				,#{content}
        		,#{userNo}
			  )
		]]>
	</insert>
	
	<!-- 게시글 삭제 -->
	<delete id="delete" parameterType="com.javaex.vo.BoardVo">
    	<![CDATA[
    	delete from board
   	 	where no = #{no}
    	]]>
	</delete>
	
	
</mapper>
